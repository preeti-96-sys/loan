    </ul>
  </div>
</nav>
<div style="padding:3%;">
<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @education_info.Name %>
</p>

<p>
  <strong>Guardian or parent name:</strong>
  <%= @education_info.Guardian_or_Parent_Name %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @education_info.Phone %>
</p>

<p>
  <strong>Age of student:</strong>
  <%= @education_info.Age_of_Student %>
</p>

<p>
  <strong>Course name:</strong>
  <%= @education_info.Course_Name %>
</p>

<p>
  <strong>Duration of course in years:</strong>
  <%= @education_info.Duration_Of_Course_in_years %>
</p>
<br>
<br>

<div style="color:red; font-size:24px;">
<% t=0 %>

<% if @education_info.Age_of_Student<18 %>
  <%= 'Student should be more than 18 years of age, hence You cannot avail student loan' %>
<% else %>
<% t=t+1 %>
<% end %>
</div>
<br>


<div style="font-size:24px; color:blue;">
<% if t==1 %>
<%= "Congrats!!! You are eligible, you can AVAIL education loan" %>
<% end %>
</div>


</div>
</body>
